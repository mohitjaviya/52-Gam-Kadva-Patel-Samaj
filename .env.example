# =========================================
# Community Connect - Environment Variables
# =========================================
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Secret (generate a random string for production)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# =========================================
# SMS Service (Twilio)
# =========================================
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Demo mode - set to 'false' to enable real SMS sending
SMS_DEMO_MODE=true

# =========================================
# Email Service (Nodemailer)
# =========================================
# For Gmail:
#   1. Enable 2-Factor Authentication
#   2. Generate App Password at: https://myaccount.google.com/apppasswords
#   3. Use the App Password below

EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# For other services (SendGrid, Mailgun, AWS SES), update accordingly:
# EMAIL_SERVICE=SendGrid
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_USER=apikey
# EMAIL_PASS=your-sendgrid-api-key

# From address for outgoing emails
FROM_EMAIL=Your Community <your-email@gmail.com>

# Demo mode - set to 'false' to enable real email sending
EMAIL_DEMO_MODE=true

# =========================================
# Database Configuration
# =========================================
# SQLite database file path
DATABASE_PATH=./database/community.db

# =========================================
# Admin User Configuration
# =========================================
# Default admin credentials (CHANGE THESE IN PRODUCTION!)
ADMIN_EMAIL=admin@community.com
ADMIN_PASSWORD=ChangeMe123!
ADMIN_PHONE=9999999999

# =========================================
# Application Settings
# =========================================
# OTP expiry time in minutes
OTP_EXPIRY_MINUTES=10

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# =========================================
# Copy .env.example to .env
# =========================================
# Run this command to create a .env file from the example:
# copy .env.example .env
